{
  "name": "nextpocket",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Guy Romelle Magayano",
    "email": "aspiredtechie2010@gmail.com",
    "url": "https://guyromellemagayano.dev"
  },
  "scripts": {
    "build": "next build",
    "commit": "git cz",
    "component:headless": "cypress run --component",
    "component": "cypress open --component",
    "dev": "next dev",
    "e2e:headless": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
    "e2e": "start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
    "lint:fix": "eslint '**/*.{js,ts,tsx}' --quiet --fix --color --ignore-path .gitignore",
    "lint:format": "prettier '**/*.{js,ts,tsx}' --write --ignore-path .gitignore",
    "lint": "yarn lint:fix && yarn lint:format",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "start": "next start",
    "test:ci": "jest --ci",
    "test": "jest --watch"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^3.3.1",
    "axios": "^1.5.1",
    "clsx": "^1.2.1",
    "focus-visible": "^5.2.0",
    "next": "^13.5.4",
    "next-auth": "^4.23.2",
    "postcss-focus-visible": "^9.0.0",
    "postgres": "^3.3.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.47.0",
    "server-only": "^0.0.1",
    "sharp": "^0.32.6",
    "swr": "^2.2.4",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.29",
    "@types/react-dom": "^18.2.14",
    "@types/tailwindcss": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "autoprefixer": "10.4.16",
    "commitizen": "^4.3.0",
    "cypress": "^13.3.2",
    "eslint": "8.51.0",
    "eslint-config-next": "13.5.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.1.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock-axios": "^4.7.3",
    "lint-staged": "^13.3.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "start-server-and-test": "^2.0.1",
    "tailwindcss": "3.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty",
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "commit": "git cz",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "packageManager": "yarn@3.6.3"
}
