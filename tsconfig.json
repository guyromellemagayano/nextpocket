{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node", "jest", "next"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["./app/*"],
      "@components": ["./components"],
      "@config": ["./config"],
      "@helpers": ["./helpers"],
      "@hooks": ["./hooks"],
      "@lib": ["./lib"],
      "@providers": ["./providers"],
      "@scripts": ["./scripts"],
      "@styles/*": ["./styles/*"],
      "@utils": ["./utils"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "config/index.ts",
    "next.config.mjs"
  ],
  "exclude": ["node_modules"]
}
